<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/BaseActionBar</item>
        <item name="android:actionMenuTextColor">@color/toolbar_text</item>
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/dark_theme</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey600</item>
        <item name="colorControlNormal">@color/grey200</item>
        <item name="colorControlActivated">@color/theme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:colorButtonNormal">@color/theme</item>

        <item name="android:textColorLink">@color/theme</item>
        <item name="android:navigationBarColor">@color/theme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Color Arrays -->
        <item name="colorsProgressBar">@array/progressBarColors</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/theme</item>
    </style>

</resources>
